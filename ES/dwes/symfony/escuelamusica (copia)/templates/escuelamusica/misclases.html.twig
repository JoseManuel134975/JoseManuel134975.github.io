{% extends 'base.html.twig' %}

{% block title %}Mis clases{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div>
        {{ form_start(form) }}
            {{ form_widget('Selecciona el instrumento que quieres impartir') }}
            {{ form_widget(form.instrumento) }}
            {{ form_widget(form.seleccionar) }}
        {{ form_end(form) }}
    </div>

    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>Instrumentos que imparte</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for instrumento in app.user.Instrumentos %}
            <tr>
                <td>{{ instrumento }}</td>
                <td><a href="{{ path('app_ver_alumnado_matriculado', { id: instrumento.id}) }}">Ver alumnado matriculado</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
