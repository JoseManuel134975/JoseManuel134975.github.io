{% extends 'base.html.twig' %}

{% block title %}Compras hechas por{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h2>[COMPRAS REALIZADAS A {{ proveedor.nombre }}]</h2>

    <hr>

    <table>
        <thead>
            <tr>
                <th>FECHA</th>
                <th>CANTIDAD</th>
            </tr>
        </thead>

        <tbody>
            {% for compra in compras %}
                <tr>
                    <td>{{ compra.fecha|date("m/d/Y") }}</td>
                    <td>{{ compra.cantidad|format_currency('EUR') }}</td>
                </tr>
            {% endfor %}
            <th>TOTAL {{ total }}â‚¬</th>
        </tbody>
    </table>
</div>
{% endblock %}
