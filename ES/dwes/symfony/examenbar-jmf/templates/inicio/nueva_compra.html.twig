{% extends 'base.html.twig' %}

{% block title %}Nueva compra
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<h2>[NUEVA COMPRA, INGRESO O GASTO]</h2>

		<hr>

		{{ form_start(form) }}
            {{ form_row(form.fecha) }}
            {{ form_row(form.cantidad) }}
            {{ form_row(form.proveedor) }}
            {{ form_row(form.factura) }}
            <button type="submit">GUARDAR</button>
            <a href="{{ path('app_gasto_index') }}" class="btn btn-primary">VOLVER</a>
		{{ form_end(form) }}

	</div>
{% endblock %}
