{% extends 'base.html.twig' %}

{% block title %}Bienvenido {{ app.user.NombreApellidos }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h4>{{ titulo }} {{ app.user.NombreApellidos }} </h4>
    <h4>Alquileres de {{ alojamiento.Descripcion }}</h4>
    
    <table class="table table-striped table-hover mt-3">
        <caption>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Entrada</th>
                <th>Salida</th>
            </tr>
        </caption>
        <tbody>
            {% for alquiler in alojamiento.Alquileres %}
                <tr>
                    <td>{{ alquiler.cliente.id }}</td>
                    <td>{{ alquiler.cliente.nombreApellidos }}</td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
